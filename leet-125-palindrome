class Solution {
    public boolean isPalindrome(String s) {
         s=s.replaceAll("[^a-zA-Z0-9]","");
         String reverse=new StringBuilder(s).reverse().toString();
            s=s.toLowerCase();
         reverse=reverse.toLowerCase();
         System.out.println(reverse);
         System.out.println(s);
      
        if(s.equals(reverse))
        return true;
        else return false;
    }
}



